<div class='container'>
  <div class='row'>
    <div class='col-md-3'>

      <% if @book.errors.any? %>
        <div class="#error_explanation">
          <%= @book.errors.count %>error prohibited this book from being saved:
        </div>
        <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
        </ul>
      <% end %>

      <h2>User info</h2>
      <%= render 'users/info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book1 %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Book detail</h2>
      <table class='table'>
        <tr>
          <td><%= link_to user_path(@user.id) do %>
              <%= image_tag @user.get_profile_image(50,50) %><br>
								<%= @user.name %>
								<% end %></td>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
          <% if @book.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success edit_book_#{@book.id}" %></td>
            <td><%= link_to 'Destroy', book_path(@book.id), method: :delete, data: { confirm: "本当に消しますか？" }, class: "btn btn-sm btn-danger destroy_book_#{@book.id}"%></td>
          <% else %>
            <td><% if @book.favorited_by?(current_user) %>
                  <p>
                    <%= link_to book_favorites_path(@book), method: :delete do %>
                      ♥<%= @book.favorites.count %> いいね
                    <% end %>
                  </p>
                  <% else %>
                  <p>
                    <%= link_to book_favorites_path(@book), method: :post do %>
                      ♡<%= @book.favorites.count %> いいね
                    <% end %>
                  </p>
                <% end %></td>
            <td>コメント数：<%= @book.book_comments.count %></td>
          <% end %>
        </tr>

        <div>
          <tr>
            <td><% @book.book_comments.each do |book_comment| %>
              <p><%= image_tag book_comment.user.get_profile_image(50,50) %></p>
              <%= book_comment.user.name %>
              <%= book_comment.created_at.strftime('%Y/%m/%d') %><%= book_comment.comment %>
            <td><% if book_comment.user == current_user %>
                  <%= link_to "削除", book_book_comment_path(book_comment.book, book_comment), method: :delete %>
                  <% end %>
            <td>
            <% end %>
          </tr>
        </div>
        <div>
          <tr>
            <td><%= form_with model: [@book, @book_comment] do |f| %>
              <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
              <%= f.submit "送信する" %>
            <% end %>
            </td>
          </tr>
        </div>
      </table>
    </div>
  </div>
</div>