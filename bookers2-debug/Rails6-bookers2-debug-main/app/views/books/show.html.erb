<div class='container'>
  <div class='row'>
    <div class='col-md-3'>

      <% if @book.errors.any? %>
        <div class="#error_explanation">
          <%= @book.errors.count %>error prohibited this book from being saved:
        </div>
        <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
        </ul>
      <% end %>

      <h2>User info</h2>
      <%= render 'users/info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book1 %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Book detail</h2>
      <table class='table'>
        <tr>
          <td><%= link_to user_path(@user.id) do %>
              <%= image_tag @user.get_profile_image(50,50) %><br>
								<%= @user.name %>
								<% end %></td>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
          <% if @book.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success edit_book_#{@book.id}" %></td>
            <td><%= link_to 'Destroy', book_path(@book.id), method: :delete, data: { confirm: "本当に消しますか？" }, class: "btn btn-sm btn-danger destroy_book_#{@book.id}"%></td>
          <% else %>
            <td><% if @book.favorited_by?(current_user) %>
                  <p>
                    <%= link_to book_favorites_path(@book), method: :delete do %>
                      ♥<%= @book.favorites.count %> いいね
                    <% end %>
                  </p>
                  <% else %>
                  <p>
                    <%= link_to book_favorites_path(@book), method: :post do %>
                      ♡<%= @book.favorites.count %> いいね
                    <% end %>
                  </p>
                <% end %></td>
            <td>コメント数：<%= @book.book_comments.count %></td>
          <% end %>
        </tr>

        <div class="new-comment"><%= render 'book_comments/index', book: @book, book_comment: @book_comment %></div>
        <div>
          <tr>
            <td>
              <div id="comments-area"><%= render "book_comments/form",books: @book,book_comment: @book_comment %></div>
            </td>
          </tr>
        </div>
      </table>
    </div>
  </div>
</div>