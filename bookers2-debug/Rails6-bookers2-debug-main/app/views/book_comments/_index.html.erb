
<% if book.book_comments.present? %>
  <p>コメント件数：<%= bookbook_comments.count %></p>
  <% book.book_comments.each do |book_comment| %>
  <tr>
    <td>
      <%= link_to user_path(book_comment.user) do %>
        <%= image_tag book_comment.user.get_profile_image, size: "50x50" %><br>
        <%= book_comment.user.name %>
      <% end %>
    </td>
    <td><%= book_comment.comment %></td>
    <td>
      <% if book_comment.user == current_user %>
      <div class="book_comment-delete">
        <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true,  data: {confirm: "本当に削除しますか？"} , class:"btn btn-danger" %>
      </div>
      <% end %>
  <% end %>
<% else %>
      <p>コメントはまだありません</p>
    </td>
  </tr>
<% end %>